def popular_words(text, words):
    # Розбиваємо текст на слова, перетворюючи на нижній регістр
    text_words = text.lower().split()
    # Ініціалізуємо словник для зберігання популярності слів
    word_count = {word: 0 for word in words}
    
    # Підрахунок кількості входжень кожного слова зі списку у тексті
    for word in text_words:
        if word in word_count:
            word_count[word] += 1
    
    return word_count

