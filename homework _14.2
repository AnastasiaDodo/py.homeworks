class Група:
    def __init__(self, номер):
        self.номер = номер
        self.група = set()

    def додати_студента(self, студент):
        self.група.add(студент)

    def видалити_студента(self, прізвище):
        студент_для_видалення = self.знайти_студента(прізвище)
        if студент_для_видалення:
            self.група.remove(студент_для_видалення)
            print(f"{студент_для_видалення.ім_я} {студент_для_видалення.прізвище} був видалений з групи.")
        else:
            print(f"Немає студента з прізвищем {прізвище} у групі.")

    def знайти_студента(self, прізвище):
        for студент in self.група:
            if студент.прізвище == прізвище:
                return студент
        return None

    def __str__(self):
        всі_студенти = '\n'.join(str(студент) for студент in self.група)
        return f'Номер:{self.номер}\n{всі_студенти}'

