class Студент(Людина):
    def __init__(self, стать, вік, ім_я, прізвище, залікова_книжка):
        super().__init__(стать, вік, ім_я, прізвище)
        self.залікова_книжка = залікова_книжка

    def __str__(self):
        return f"{self.прізвище} {self.ім_я}, {self.стать}, вік: {self.вік}, залікова книжка: {self.залікова_книжка}"
    
    def __eq__(self, інший):
        return str(self) == str(інший)

