def calculator():
    while True:
        try:
            # Запит користувача для введення виразу
            expression = input("Введіть вираз для обчислення: ")

            # Обчислення виразу і вивід результату
            result = eval(expression)
            print("Результат обчислення:", result)

            # Питання користувача про продовження
            user_input = input("Бажаєте продовжити обчислення? (y/n): ").lower()
            
            # Перевірка введення користувача
            if user_input != 'y':
                break  # Закінчення циклу, якщо користувач ввів щось, крім 'y'
        except Exception as e:
            print("Помилка обчислення:", e)

# Виклик функції калькулятора
calculator()
